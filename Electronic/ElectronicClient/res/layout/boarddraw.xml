<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"

 > 
        
        
  <!-- This is the top header, contains user's picture etc. -->
  <!-- Linear 1 begin************************************************* -->
 <LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:paddingLeft="5dip" 
    android:paddingRight="5dip" 
    android:paddingTop="10dip" 
    android:paddingBottom="10dip" 
     android:background="@color/blue_start"
    >
    <ImageView
      android:layout_width="80dip"
      android:layout_height="80dip"
      android:padding="3dip"
      android:src="@drawable/blank_boy"
      android:scaleType="fitCenter"  
      android:gravity="center_vertical" 
      android:background="@drawable/photo_background"/>
      
    <LinearLayout 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:paddingLeft="10dip"
      android:orientation="vertical" 
      >
        
      <TextView 
        android:id="@+id/userDetailsActivityUsername" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="Username"
        android:singleLine="true"
        android:maxLines="1"
        android:textAppearance="@style/TextViewStyleUserDetailsActivityTitle" />
        
    
          
    </LinearLayout> 
  </LinearLayout>
  <!-- Linear 1 end************************************************************ -->
  <!-- Linear 2 begin************************************************************ -->
  <LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="8dip"
    android:background="@color/color_bright_green"
    />
   <!-- Linear 2 end************************************************************ -->
   <!-- Linear 3 begin************************************************************ -->
   <LinearLayout 
    android:layout_width="fill_parent" 
    android:orientation="horizontal"
    android:layout_height="100dip"
    >
    <TableLayout  
       android:layout_width="fill_parent"  
      android:layout_height="fill_parent"
        >
   <TableRow >
   <TextView 
       android:id="@+id/colorRed"
       android:layout_width="80dip"
       android:layout_height="50dip"
       android:text="红色"
       android:background="#cec6ea"
       android:gravity="center"
       android:textAppearance="@style/CommomStyle" />
      
   <TextView 
       android:id="@+id/colorBlue"
       android:layout_width="80dip"
       android:layout_height="50dip"
       android:text="蓝色"
       android:background="#cec6ea"
       android:gravity="center"
       android:textAppearance="@style/CommomStyle" />
       
   <TextView 
       android:id="@+id/colorBlack"
       android:layout_width="80dip"
       android:layout_height="50dip"
       android:text="黑色"
       android:background="#cec6ea"
       android:gravity="center"
       android:textAppearance="@style/CommomStyle" />
      
   <TextView 
       android:id="@+id/colorGray"
       android:layout_width="80dip"
       android:layout_height="50dip"
       android:text="灰色"
       android:background="#cec6ea"
       android:gravity="center"
       android:textAppearance="@style/CommomStyle" />
       
   <TextView 
       android:id="@+id/colorGreen"
       android:layout_width="80dip"
       android:layout_height="50dip"
       android:text="绿色"
       android:background="#cec6ea"
       android:gravity="center"
       android:textAppearance="@style/CommomStyle" />
      
   <TextView 
       android:id="@+id/clearImg"
       android:layout_width="80dip"
       android:layout_height="50dip"
       android:text="清除"
       android:gravity="center"
       android:background="#cec6ea"
       android:textAppearance="@style/CommomStyle" />
      
   </TableRow>
    
       
    </TableLayout>   
    </LinearLayout>
     <!-- Linear 3 end************************************************************ -->
     <!-- Linear 4 begin************************************************************ -->
    <LinearLayout 
    android:layout_width="fill_parent" 
    android:orientation="horizontal"
    android:layout_height="550dip"
    >
    <ImageView 
        android:id="@+id/drawImageView" 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   </ImageView>
    </LinearLayout>
    <!-- Linear 4 end************************************************************ -->
</LinearLayout>